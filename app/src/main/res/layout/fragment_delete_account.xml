<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_5sdp"
        app:srcCompat="@drawable/ic_error"
        app:tint="@color/alert_color" />

    <TextView
        android:id="@+id/tv_enter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:fontFamily="@font/circularstd_black"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/enter_password"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/_14ssp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_all_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:fontFamily="@font/circularstd_book"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/all_data_deleted"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/_14ssp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_password"
        style="@style/RegEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/hint_password"
        android:imeOptions="actionDone"
        android:inputType="textPassword" >
        <requestFocus/>
    </androidx.appcompat.widget.AppCompatEditText>


    <TextView
        android:id="@+id/tv_error_info"
        style="@style/ErrorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="@string/you_deserve" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_delete"
        style="@style/RegBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:backgroundTint="@color/alert_color"
        android:text="@string/delete_account" />

</LinearLayout>